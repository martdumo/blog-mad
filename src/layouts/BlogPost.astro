---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import YorhaPattern from '../components/YorhaPattern.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		
        <!-- Barra decorativa superior -->
        <YorhaPattern />

		<main class="container">
			<article class="content-decoration">
				<div class="prose">
					<div class="title">
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
                    
                    <!-- Aquí se renderiza el contenido de tu Markdown (texto e imágenes) -->
					<slot />
				</div>
			</article>
		</main>
        
        <!-- Barra decorativa inferior -->
        <YorhaPattern />

		<Footer />
	</body>
</html>

<style>
    /* Estilos del encabezado del artículo */
	.title {
		margin-bottom: 1em;
		padding: 1em 0;
		text-align: center;
		line-height: 1;
	}
	.title h1 {
		margin: 0 0 0.5em 0;
	}
	.date {
		margin-bottom: 0.5em;
		color: var(--accent-color);
        font-family: monospace;
	}
	.last-updated-on {
		font-style: italic;
	}

    /* --- ESTILO DE IMÁGENES (VITAMINA CLOUDINARY) --- */
    /* Esto hace que las imágenes dentro del post se vean con borde y sombra */
    .prose :global(img) {
        border: 1px solid var(--accent-color);
        padding: 5px;
        background: rgba(0, 0, 0, 0.3);
        box-shadow: 4px 4px 0 rgba(0, 0, 0, 0.5);
        max-width: 100%;
        height: auto;
        display: block;
        margin: 2rem auto;
        opacity: 0.9;
        transition: all 0.3s ease;
    }

    .prose :global(img:hover) {
        opacity: 1;
        border-color: #fff;
        box-shadow: 6px 6px 0 rgba(0, 0, 0, 0.7);
        transform: translateY(-2px);
    }
</style>